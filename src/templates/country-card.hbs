<div class="card">
    <div class="card-img">
        <img src="{{0.flag}}" alt="{{0.name}}">
    </div>
    <div class="card-body">
        <h2 class="card-title"> {{0.name}} </h2>
        <p class="card-text"> Capital: {{0.capital}} </p>
        <p class="card-text"> Population: {{0.population}} </p>

        <p class="card-text"> Languages: </p>
    <ul class="list-languages">
    {{#each 0.languages}}
            <li class="list-languages-item"> {{name}} </li>
    {{/each}}
    </ul>

    </div>
</div>